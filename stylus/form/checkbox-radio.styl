@import "shared"

$checkbox-radio
	cursor: pointer
	display: inline-block
	line-height: 1.25
	position: relative
	input
		cursor: pointer
	&:hover
		color: $input-hover-color
	&[disabled],
	fieldset[disabled] &,
	input[disabled]
		color: $input-disabled-color
		cursor: not-allowed

_checkbox()
	@extend $checkbox-radio

	{block}

_radio()
	@extend $checkbox-radio
	& + {$radio-selector}
		ltr-property("margin", 0.5em, false)

	{block}

if !$silent.form.checkbox && !$silent-mode
	{$checkbox-selector}
		_checkbox()

if !$silent.form.radio && !$silent-mode
	{$radio-selector}
		_radio()
