{
  "name": "bulma-stylus-plus",
  "version": "0.9.1-beta",
  "homepage": "https://github.com/M-O-Z-G/bulma-stylus-plus",
  "author": {
    "name": "Alexander \"M.O.Z.G\" Dikov",
    "email": "alexandermozgdikov+github@gmail.com",
    "url": "https://mozg-studio.org"
  },
  "contributors": [
    "Oskari Groenroos <oskari@groenroos.fi> (http://groenroos.fi)",
    "Jeremy Thomas <bbxdesign@gmail.com> (http://jgthms.com)"
  ],
  "description": "Improved and expanded version of Bulma Stylus translation of Bulma, flexbox-based CSS framework.",
  "main": "index.js",
  "stylus": "bulma-stylus-plus.styl",
  "unpkg": "css/bulma.css",
  "style": "bulma/css/bulma.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M-O-Z-G/bulma-stylus-plus.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "stylus",
    "flexbox",
    "responsive",
    "framework",
    "bulma",
    "components",
    "css3",
    "prototyping"
  ],
  "bugs": {
    "url": "https://github.com/M-O-Z-G/bulma-stylus-plus/issues"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^1.0.0",
    "clean-css-cli": "4.3.0",
    "postcss-cli": "^8.2.0",
    "rimraf": "3.0.2",
    "stylus": "^0.54.7"
  },
  "optionalDependencies": {
    "stylint": "^2.0.0",
    "synp": "^1.7.0"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-autoprefix && npm run build-cleancss",
    "build-all": "npm run build-autoprefix && npm run build-cleancss && npm run rtl-autoprefix && npm run rtl-cleancss",
    "build-overwrite": "npm run build-autoprefix && npm run build-cleancss",
    "build-autoprefix": "stylus bulma-stylus-plus.styl --out css/bulma.css --sourcemap --use autoprefixer-stylus",
    "build-stylelint": "stylelint css/bulma.css --fix -q --custom-syntax stylelint-plugin-stylus/custom-syntax",
    "build-cleancss": "cleancss -o css/bulma.min.css css/bulma.css",
    "build-clean": "rimraf css",
    "build-stylus": "stylus bulma-stylus-plus.styl --out css/bulma.css --sourcemap",
    "rtl": "npm run build-clean && npm run rtl-autoprefix && npm run rtl-cleancss",
    "rtl-overwrite": "npm run rtl-autoprefix && npm run rtl-cleancss",
    "rtl-autoprefix": "stylus bulma-stylus-plus-rtl.styl --out css/bulma-rtl.css --sourcemap --use autoprefixer-stylus",
    "rtl-stylelint": "stylelint css/bulma-rtl.css --fix -q --custom-syntax stylelint-plugin-stylus/custom-syntax",
    "rtl-cleancss": "cleancss -o css/bulma-rtl.min.css css/bulma-rtl.css",
    "rtl-stylus": "stylus bulma-stylus-plus-rtl.styl --out css/bulma-rtl.css --sourcemap",
    "deploy": "npm run build",
    "start": "stylus -w bulma-stylus-plus.styl --out css/bulma.css --sourcemap"
  },
  "files": [
    "css",
    "stylus",
    "index.js",
    "bulma-stylus-plus.styl",
    "bulma-stylus-plus-rtl.styl",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "README.md"
  ],
  "engines": {
    "node": ">=8.17.0"
  },
  "engineStrict": true,
  "browserslist": [
    "last 1 version",
    "> 1%",
    "IE 9",
    "firefox 28",
    "chrome 30",
    "safari 7",
    "opera 20",
    "ios_saf 7"
  ]
}
